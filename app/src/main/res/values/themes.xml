<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaletteForge" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">#F5F5F5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#F5F5F5</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="RoundedButton">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="RoundedPaletteButton">
    <item name="android:backgroundTint">#F44336</item>
    <item name="android:paddingVertical">8dp</item>
    <item name="android:paddingHorizontal">12dp</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/black</item>
    <item name="cornerRadius">10dp</item>
</style>


</resources>